{
  "name": "sniplink",
  "displayName": "SnipLink",
  "publisher": "Trottk",
  "description": "Generate a shareable link for any code snippet directly from VS Code. Copy, paste, and share instantly without commits or pushes.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hussainHanif/SnipLink"
  },
  "bugs": {
    "url": "https://github.com/hussainHanif/SnipLink/issues"
  },
  "homepage": "https://sniplink.vercel.app",
  "license": "MIT",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:sniplink.copyAndShare"
  ],
  "contributes": {
    "commands": [
      {
        "command": "sniplink.copyAndShare",
        "title": "SnipLink: Copy & Share"
      }
    ],
    "keybindings": [
      {
        "command": "sniplink.copyAndShare",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc && node esbuild.js --production",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.70.0",
    "typescript": "^5.0.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "@vscode/test-electron": "^2.3.0"
  }
}
